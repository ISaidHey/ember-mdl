{{input type="checkbox" id=controlId class="mdl-icon-toggle__input" name=name checked=checked}}
<i class="mdl-icon-toggle__label material-icons">{{icon}}</i>
{{#if ripple}}
    <span class="mdl-icon-toggle__ripple-container mdl-ripple--center">
        {{mdl-ripple ignoreEvents=true center=true}}
    </span>
{{/if}}