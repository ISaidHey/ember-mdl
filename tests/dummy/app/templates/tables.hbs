<h3>Tables</h3>


{{#mdl-data-table class="mdl-shadow--2dp" as |table|}}
    <thead>
    <tr>
        <th>{{mdl-checkbox}}</th>
        <th class="mdl-data-table__cell--non-numeric">Material</th>
        <th>Quantity</th>
        <th>Unit price</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>{{mdl-checkbox}}</td>
        <td class="mdl-data-table__cell--non-numeric">Acrylic (Transparent)</td>
        <td>25</td>
        <td>$2.90</td>
    </tr>
    <tr>
        <td>{{mdl-checkbox}}</td>
        <td class="mdl-data-table__cell--non-numeric">Plywood (Birch)</td>
        <td>50</td>
        <td>$1.25</td>
    </tr>
    <tr>
        <td>{{mdl-checkbox}}</td>
        <td class="mdl-data-table__cell--non-numeric">Laminate (Gold on Blue)</td>
        <td>10</td>
        <td>$2.35</td>
    </tr>
    </tbody>
{{/mdl-data-table}}

